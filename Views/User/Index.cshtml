@model List<User>
@{
    ViewData["Title"] = "Users List";
}

<h2 style="text-align: center; color:rgb(162, 119, 153);" class="pt-3 pb-3">User Details List</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Contact Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.ContactNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br>
<br>
<div class="row">
    <div class="col-md-12">
        <h4><a asp-action="Create" asp-controller="User" class="btn btn-success"> Create User</a></h4>
    </div>
</div>
